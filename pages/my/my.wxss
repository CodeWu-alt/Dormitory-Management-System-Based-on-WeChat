.contain {
  min-height: 100%;
  overflow: hidden;
  overflow-y: hidden;
}

.button {
  width: 750rpx;
  margin-left:auto;
  margin-right:auto;
  padding-left:14px;
  padding-right:14px;
  background: white;
  border: none;
  text-align: left;
  padding: 7px 10px;
  margin: 0px;
  line-height: 1.6;
  border-radius: 0;
  position:relative;
display:block;

box-sizing:border-box;
font-size:18px;

text-decoration:none;
/* line-height:2.55555556;
border-radius:5px; */
-webkit-tap-highlight-color:transparent;
overflow:hidden;
}

.button::after {
  border: none;
  border-radius: 0;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 750rpx;
  background-color: #87CEEB
}

.userinfo-avatar {
  margin-top: 40rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  font-size: 20px;
}

/*表格*/
.item {
  display: flex;
  flex-direction: row;
  padding: 10px;
  background: white;
  border-bottom: 0.5px solid lightgrey;
}

/*图标*/
.item .icon {
  width: 26px;
  height: 26px;
  margin-right: 10px;
}

/*文字*/
.item label {
  margin: 5px 0 0 10px;
  font-size: 15px;

  /*撑开label两边部分的距离*/
  flex: 1;

  /*垂直居中*/
  margin: auto;
}

/*箭头*/
.item .arrow {
  width: 8px;
  height: 9px;
  margin: auto;
  margin-top: 13px;
}

.end {
  background:#eee;
  width:100%;
  height: 500rpx
}