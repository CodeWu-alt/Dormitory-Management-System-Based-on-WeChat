<view>
  <view class="account1">
    <view class="title">账号名</view>
    <view class="num"><input bindinput="inputName" placeholder="请输入用户名"/></view>
  </view>

  <view class="hr"></view>

  <view class="account">
    <view class="title">旧密码</view>
    <view class="num">
    <input bindinput="inputPassword" placeholder="请输入旧密码" password/></view>
  </view>

  <view class="hr"></view>

  <view class="account">
    <view class="title">新密码</view>
    <view class="num">
    <input bindinput="inputPassword1" placeholder="请输入新密码" password/></view>
  </view>

  <view class="hr"></view>  

  <view class="account">
    <view class="title">请确认</view>
    <view class="num">
    <input bindinput="inputPassword2" placeholder="请确认新密码" password/></view>
  </view>

  <view class="hr"></view>  

  <button class="btn" type="primary" bindtap="check">确认</button> 
</view>
